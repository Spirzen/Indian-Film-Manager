@page
@model IndianFilmManager.Pages.Cinemas.IndexModel
@{
    ViewData["Title"] = "Управление фильмами";
}

<div class="container">
    <header class="text-center my-4">
        <h1 class="display-6 text-primary">Список фильмов</h1>
    </header>

    <!-- Кнопка добавления -->
    <div class="mb-4">
        <a href="/Cinemas/AddEdit" class="btn btn-success">Добавить фильм</a>
    </div>

    <!-- Таблица фильмов -->
    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>Название фильма</th>
                <th>Актёры</th>
                <th>Жанры</th>
                <th>Год выпуска</th>
                <th>Рейтинг</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cinema in Model.Cinemas)
            {
                <tr>
                    <td>@cinema.Name</td>
                    <td>
                        @{
                            var actors = new List<string>();
                            if (cinema.ActorId1.HasValue) actors.Add(cinema.Actor1Name);
                            if (cinema.ActorId2.HasValue) actors.Add(cinema.Actor2Name);
                            if (cinema.ActorId3.HasValue) actors.Add(cinema.Actor3Name);
                            if (cinema.ActorId4.HasValue) actors.Add(cinema.Actor4Name);
                            @string.Join(", ", actors)
                        }
                    </td>
                    <td>
                        @{
                            var genres = new List<string>();
                            if (cinema.GenreId1.HasValue) genres.Add(cinema.Genre1Name);
                            if (cinema.GenreId2.HasValue) genres.Add(cinema.Genre2Name);
                            if (cinema.GenreId3.HasValue) genres.Add(cinema.Genre3Name);
                            @string.Join(", ", genres)
                        }
                    </td>
                    <td>@cinema.Year</td>
                    <td>@cinema.Score</td>
                    <td>
                        <a href="/Cinemas/AddEdit?id=@cinema.Id" class="btn btn-sm btn-warning">Редактировать</a>
                        <form method="post" asp-page-handler="Delete" style="display:inline;">
                            <input type="hidden" name="id" value="@cinema.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>