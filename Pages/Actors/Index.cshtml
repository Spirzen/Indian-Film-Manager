@page
@model IndianFilmManager.Pages.Actors.IndexModel
@{
    ViewData["Title"] = "Управление актёрами";
}

<div class="container">
    <header class="text-center my-4">
        <h1 class="display-6">Список актёров</h1>
    </header>

    <!-- Кнопка добавления -->
    <div class="mb-4">
        <a href="/Actors/AddEdit" class="btn btn-success">Добавить актёра</a>
    </div>

    <!-- Таблица актёров -->
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Имя актёра</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var actor in Model.Actors)
            {
                <tr>
                    <td>@actor.Id</td>
                    <td>@actor.Name</td>
                    <td>
                        <a href="/Actors/AddEdit?id=@actor.Id" class="btn btn-sm btn-warning">Редактировать</a>
                        <form method="post" asp-page-handler="Delete" style="display:inline;">
                            <input type="hidden" name="id" value="@actor.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>